<div class="fields">
  <li>
    <%= f.object.question.content %>
  </li>
  <br>
  <ol type="a">
    <% case f.object.question.question_type %>
    <% when Settings.questions.type.single %>
      <% f.object.question.answers.each do |answer| %>
        <%= f.radio_button :content_answer, answer.id,
          {checked: f.object.content, multiple: true, class: "radio_answer"} %>
        <%= answer.content %><br/>
    <% end %>
    <% when Settings.questions.type.multiple %>
      <% f.object.question.answers.each do |answer| %>
        <%= f.check_box :content_answer,
          {multiple: true, class: "radio_answer"}, answer.id, false %>
        <%= answer.content %><br/>
    <% end %>
    <% when Settings.questions.type.text %>
      <%= f.text_field :content_answer, multiple: true %>
    <% end %>
  </ol>
</div>
